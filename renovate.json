{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)values\\.yaml$"
      ],
      "matchStrings": [
        "(?s)#\\s?renovate: image=(?<depName>.*?)\\s?tag:\\s?\\\"?(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-alpha\\.\\d+)?)\\\"?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}
